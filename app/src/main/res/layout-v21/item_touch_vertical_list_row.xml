<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_touch_vertical_list_row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple"
    >
    <!--
    More info
    https://goo.gl/Y5Ccj6 -> support lib attributes & ripple background
    https://goo.gl/WBd872 -> ripple

        android:background="@drawable/ripple"
        android:stateListAnimator="@animator/raise"
        android:background="?selectableItemBackground"
    -->
    <TextView
        android:id="@+id/text_touch_vertical_list_row"
        android:padding="16dp"
        android:textSize="16sp"
        tools:fontFamily="@font/oxygen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="32dp" />
    <!--
        android:clickable="false"
        android:focusable="false"
    -->
    <ImageView
        android:id="@+id/image_touch_vertical_list_row_handle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_reorder_black_24dp"
        android:tint="@color/colorAccent"
        android:paddingEnd="16dp" />

</FrameLayout>
